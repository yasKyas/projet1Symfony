{% extends 'base.html.twig' %}

{% block title %}Contrat index{% endblock %}

{% block body %}
    <h1>Contrat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date de depart</th>
                <th>Date de retour</th>
                <th>Matricule</th>
            </tr>
        </thead>
        <tbody>
        {% for contrat in contrats %}
            <tr>
                <td>{{ contrat.id }}</td>
                <td>{{ contrat.datedepart ? contrat.datedepart|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.dateretour ? contrat.dateretour|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.voiture }}</td>
                <td><a href="{{ path('facture_new', {'id': contrat.id}) }}" class="btn btn-danger btn-sm">facture</a></td>

             
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
